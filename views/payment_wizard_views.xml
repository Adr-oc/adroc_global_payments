<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="wizzard_masive_payments_form" model="ir.ui.view">
            <field name="name">adroc_global_payments.masive_payments.form</field>
            <field name="model">invoice.wizzard.payments</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Seleccione Proveedores">
                    <group>
                        <group>
                            <!-- filename="document_fname" widget="binary" -->
                            <field name="company_id" invisible="1"/>
                            <field name="upload_file"/>
                            <field name="journal_id" />
                            <field name="partner_id" string="Proveedor" />
                        </group>
                        <group>
                            <field name="payment_method_id" />
                            <field name="currency_id" />
                            <field name="boleta" placeholder="Ej: Boleta-12345"
                                   help="Campo para pagos agrupados. En pagos individuales se usa la boleta de cada lÃ­nea."/>
                        </group>
                    </group>
                    <group>
                        <button name="read_file" string="Generar Lineas" type="object"
                        class="oe_highlight" invisible="0" />
                    </group>
                    <notebook>
                        <page string="Lineas Pagos">
                            <field name="lineas">
                                <list editable="top" decoration-success="match_status == 'found'" decoration-danger="match_status == 'not_found'">
                                    <field name="company_currency_id" invisible="1" />
                                    <field name="match_status" invisible="1"/>
                                    <field name="excel_reference" string="Ref. Excel" optional="show"/>
                                    <field name="ref" string="Factura Sistema"/>
                                    <field name="match_field" string="Campo Match" optional="show"/>
                                    <field name="partner_id"/>
                                    <field name="boleta" string="Boleta Individual" optional="hide"
                                           help="Solo usado en pagos individuales"/>
                                    <field name="date" />
                                    <field name="amount_company_currency_signed" widget="monetary"
                                        string="Monto" sum="Total" />
                                    <field name="amount_total_ade" widget="monetary" options="{'currency_field': 'currency_id'}"
                                           string="Saldo Pendiente"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_generate_payments" string="Generar Pagos"
                            type="object" class="oe_highlight" />
                        <button string="Cancelar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

